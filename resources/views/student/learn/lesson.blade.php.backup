    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-toggle')?.addEventListener('click', function() {
            document.getElementById('curriculum-sidebar').classList.toggle('hidden');
            document.getElementById('curriculum-sidebar').classList.toggle('fixed');
            document.getElementById('curriculum-sidebar').classList.toggle('inset-0');
            document.getElementById('curriculum-sidebar').classList.toggle('z-40');
        });

        // Module toggle
        function toggleModule(moduleId) {
            const content = document.getElementById(moduleId + '-content');
            const iconClosed = document.getElementById(moduleId + '-icon-closed');
            const iconOpen = document.getElementById(moduleId + '-icon-open');

            content.classList.toggle('hidden');
            iconClosed.classList.toggle('hidden');
            iconOpen.classList.toggle('hidden');
        }

        // Auto-open current lesson's module
        @foreach($modules as $module)
            @if($module->lessons->contains('id', $lesson->id))
                toggleModule('module-{{ $module->id }}');
            @endif
        @endforeach

        // Tab switching
        function switchTab(tabName, element) {
            // Hide all panels
            document.querySelectorAll('.tab-panel').forEach(panel => panel.classList.add('hidden'));
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active', 'border-purple-600', 'text-purple-400');
                btn.classList.add('border-transparent', 'text-gray-400');
            });

            // Show selected panel
            const panel = document.getElementById('tab-' + tabName);
            if (panel) {
                panel.classList.remove('hidden');
            }

            // Highlight active tab button
            if (element) {
                element.classList.add('active', 'border-purple-600', 'text-purple-400');
                element.classList.remove('border-transparent', 'text-gray-400');
            }
        }

        // Initialize tabs - set overview as active
        document.addEventListener('DOMContentLoaded', function() {
            const overviewTab = document.querySelector('[onclick*="overview"]');
            if (overviewTab) {
                overviewTab.classList.add('border-purple-600', 'text-purple-400');
                overviewTab.classList.remove('border-transparent', 'text-gray-400');
            }
        });

        // Notes functionality
        document.getElementById('note-form')?.addEventListener('submit', async function(e) {
            e.preventDefault();

            const content = document.getElementById('note-content').value;
            if (!content.trim()) return;

            const timestamp = document.getElementById('note-timestamp').checked ? getCurrentVideoTime() : null;

            try {
                const response = await fetch('{{ route("student.learn.notes.save", ["course" => $course->slug, "lesson" => $lesson->slug]) }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').content
                    },
                    body: JSON.stringify({
                        content: content,
                        video_timestamp: timestamp
                    })
                });

                const data = await response.json();

                if (data.success) {
                    document.getElementById('note-content').value = '';
                    document.getElementById('note-timestamp').checked = false;
                    location.reload(); // Reload to show new note
                }
            } catch (error) {
                console.error('Error saving note:', error);
            }
        });

        async function deleteNote(noteId) {
            if (!confirm('Are you sure you want to delete this note?')) return;

            try {
                const deleteUrl = `/learn/{{ $course->slug }}/{{ $lesson->slug }}/notes/${noteId}`;
                const response = await fetch(deleteUrl, {
                    method: 'DELETE',
                    headers: {
                        'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').content
                    }
                });

                const data = await response.json();

                if (data.success) {
                    document.querySelector(`[data-note-id="${noteId}"]`).remove();
                }
            } catch (error) {
                console.error('Error deleting note:', error);
            }
        }

        function getCurrentVideoTime() {
            // This would need to be implemented based on your video player
            return 0;
        }

        function seekToTimestamp(seconds) {
            // This would need to be implemented based on your video player
            console.log('Seeking to', seconds);
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl+Enter to save note
            if ((e.ctrlKey || e.metaKey) && e.key === 'Enter' && document.activeElement.id === 'note-content') {
                e.preventDefault();
                document.getElementById('note-form').dispatchEvent(new Event('submit'));
            }
        });
